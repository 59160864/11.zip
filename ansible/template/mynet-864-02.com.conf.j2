<VirtualHost *:80>
    ServerName web-02.mynet-864.com
    ServerAlias mynet-864.com
    DocumentRoot /var/nfs/www/mynet-864.com/html
    <Directory /var/nfs/www/mynet-864.com/html>
        Options -Indexes +FollowSymLinks +MultiViews
        AllowOverride All
        Require all granted
    </Directory>
    ErrorLog /var/nfs/www/mynet-864.com/log/error.log
    CustomLog "| /bin/sh -c '/usr/bin/tee -a /var/nfs/www/mynet-864.com/log/requests.log | /usr/bin/logger -thttpd-mynet-864.com -plocal1.notice'" combined
</VirtualHost>